<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :uwi_id, label: "UWI ID" %>
    <%= f.association :campus, prompt: "Please select", input_html: { class: 'form-select' } %>
    <%= f.association :department, prompt: "Please select", input_html: { class: 'form-select' } %>
    <%= f.input :title %>
    <%= f.input :first_name %>
    <%= f.input :middle_names %>
    <%= f.input :last_name %>
    <%= f.input :gender, collection: User::GENDER, prompt: "Please select" %>
    <%= f.input :account_type, collection: User::account_types.keys, prompt: "Please select", input_html: { class: 'form-select' }, label_method: lambda { |type| type.titleize } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
