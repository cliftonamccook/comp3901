<p id="notice"><%= notice %></p>

<h1>Requirements</h1>

<table>
  <thead>
    <tr>
      <th>Requirement group</th>
      <th>Operation</th>
      <th>Minimum amount of credits</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requirements.each do |requirement| %>
      <tr>
        <td><%= requirement.requirement_group_id %></td>
        <td><%= requirement.operation %></td>
        <td><%= requirement.minimum_amount_of_credits %></td>
        <td><%= link_to 'Show', requirement %></td>
        <td><%= link_to 'Edit', edit_requirement_path(requirement) %></td>
        <td><%= link_to 'Destroy', requirement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Requirement', new_requirement_path %>
