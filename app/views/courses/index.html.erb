<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Description</th>
      <th>Credit amount</th>
      <th>Level</th>
      <th>Semester offered in</th>
      <th>Discountinued</th>
      <th>Department</th>
      <th>Requirement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.code %></td>
        <td><%= course.description %></td>
        <td><%= course.credit_amount %></td>
        <td><%= course.level %></td>
        <td><%= course.semester_offered_in %></td>
        <td><%= course.discountinued %></td>
        <td><%= course.department_id %></td>
        <td><%= course.requirement_id %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

