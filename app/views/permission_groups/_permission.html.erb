<div class="col-md-6 card-container">
  <div class="card mb-3">
    <div class="card-header">
      <%= f.input_field :_destroy, as: :hidden %>
      <h3 class="card-title">New Permission</h3>
      <div class="card-actions btn-actions">
        <%= link_to '#', class: 'btn-action remove_permission text-danger' do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
        <% end %>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col">
          <%= f.association :department, prompt: "Please select a department", input_html: { class: 'form-select' } %>
        </div>
        <div class="col">
          <%= f.association :permission_group, as: :hidden %>
        </div>
      </div>
      <div class="row">
        <%= f.input :can_create %>
        <%= f.input :can_update %>
        <%= f.input :can_discontinue %>
        <%= f.input :can_view %>
      </div>
    </div>
  </div>
</div>